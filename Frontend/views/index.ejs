<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Scam Detection ML App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
</head>
<body>
  <div class="container py-5">
    <h1 class="text-center mb-5 text-primary">🔍 Scam Detection ML App</h1>

    <!-- Text Scam Detection -->
    <div class="card shadow mb-4">
      <div class="card-header bg-info text-white fw-bold">📝 Text Scam Detection</div>
      <div class="card-body">
        <form id="textForm">
          <label for="textInput" class="form-label">Enter Text</label>
          <textarea class="form-control mb-3" id="textInput" rows="3" required></textarea>
          <button type="submit" class="btn btn-primary">Check</button>
        </form>
        <div id="textResult" class="mt-3 alert alert-secondary d-none"></div>
      </div>
    </div>

    <!-- Voice Scam Detection -->
    <div class="card shadow mb-4">
      <div class="card-header bg-warning text-dark fw-bold">🎤 Voice Scam Detection</div>
      <div class="card-body">
        <form id="voiceForm" enctype="multipart/form-data">
          <input type="file" class="form-control mb-3" id="voiceFile" accept="audio/*" required>
          <button type="submit" class="btn btn-warning">Upload</button>
        </form>
        <div id="voiceResult" class="mt-3 alert alert-secondary d-none"></div>
      </div>
    </div>

    <!-- Fake Account Detection -->
    <div class="card shadow mb-4">
      <div class="card-header bg-danger text-white fw-bold">👤 Fake Account Detection</div>
      <div class="card-body">
        <form id="fakeForm" enctype="multipart/form-data">
          <input type="text" class="form-control mb-2" id="accName" placeholder="Account Name" required>
          <input type="number" class="form-control mb-2" id="followers" placeholder="Followers" required>
          <input type="number" class="form-control mb-2" id="following" placeholder="Following" required>
          <input type="file" class="form-control mb-2" id="profilePic" accept="image/*" required>
          <button type="submit" class="btn btn-danger">Detect</button>
        </form>
        <div id="fakeResult" class="mt-3 alert alert-secondary d-none"></div>
      </div>
    </div>
  </div>

  <script src="/script.js"></script>
</body>
</html>
